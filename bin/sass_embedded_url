#!/usr/bin/env bash

# This script just outputs a platform-specific URL to download binaries for dart-sass-embedded

function _os() {
  case `uname` in
    "Darwin")
      echo "macos"
      ;;
    "Linux")
      echo "linux"
      ;;
    "*")
      exit 1
      ;;
  esac
}

function _architecture() {
  case `arch` in
    "i386")
      echo "x64"
      ;;
    "arm64")
      echo "arm64"
      ;;
    "x64")
      echo "x64"
      ;;
    "*")
      exit 1
      ;;
  esac
}

VERSION=$1
echo "https://github.com/sass/dart-sass-embedded/releases/download/${VERSION}/sass_embedded-${VERSION}-`_os`-`_architecture`.tar.gz"
